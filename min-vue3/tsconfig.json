{
  "compilerOptions": {
    "outDir": "dist", //输出的目录
    "sourceMap": true, //采用的sourcemap        
    "target": "es2016", //目标语法
    "module":"esnext", //模块格式
    "moduleResolution": "node", //模块解析方式
    "strict": false,   //严格模式
    "resolveJsonModule": true, //解析json模板
    "esModuleInterop": true, //允许通过es6语法引入commonjs模块
    "jsx": "preserve", //jsx不转意
    "lib": ["ESNext","DOM"], //支持的类库 exnext和dom
    "baseUrl": ".",
    "paths": {
      "@vue/*":["packages/*/src"]
    }
  }
}
